<section class="moreAboutMovie">
  <section id="movieID" data-id="<%= movie.id %>">
    
    <img src="<%= movie.image.url%>" alt="" />
    
    <section class="movieInfo">
      <h2><%= movie.title %></h2>
      <p><%- movie.intro %></p>
      <h3 class="movie-rating">Filmens Betyg:</h3>
    </section>

    <section class="upcoming">
        <h2>Kommande visningar</h2>
        <ul id="coming-screenings"></ul>
    </section>

  </section>
</section>





<section class ="reviewsSection">
  <section class="reviewDisplay">
    <ul id="reviewContainer"></ul>
    <button type="button" id="buttonPrevious">Föregående </button>
    <button type="button" id="buttonNext">Se fler</button>
  </section>

  <form class="review-form">
    <div class="review-send">
      <h2>Lämna review:</h2>
      <div class="person-info">
        <h4>Förnamn:</h4>
        <input class="firstName" class="input" type="text" />
        <h4>Efternamn:</h4>
        <input class="lastName" class="input" type="text" />
      </div>
      <div class="rating-div">
        <h4>Betyg:</h4>
        <select class="rating" aria-placeholder="0-5" name="" id="">
          <option value="0">0</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4 ">4</option>
          <option value="5 ">5</option>
        </select>
      </div>
  
      <textarea
        class="comment-field"
        placeholder="Lämna kommentar här"
        name=""
        id=""
        cols="25"
        rows="5"
      ></textarea>
    </div>
  
    <button type="submit" class="send-btn">Skicka din review</button>
  </form>

</section>




<script src="/static/jsfrontend/moviePageBundle.js" type="module"></script>
